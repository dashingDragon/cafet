{
  "extends": "next/core-web-vitals",
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "indent": ["error", 4],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
